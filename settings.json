{
	"permissions": {
		"allow": [
			"Bash(git:*)",
			"Bash(pnpm:*)",
			"Bash(npm:*)",
			"Bash(npx:*)",
			"Bash(node:*)",
			"Bash(mkdir:*)",
			"Bash(ls:*)",
			"Bash(docker:*)",
			"Bash(bun:*)",
			"Bash(biome:*)",
			"Bash(vitest:*)",
			"Bash(tsc:*)",
			"Bash(terraform:validate)",
			"Bash(terraform:plan)",
			"Bash(kubectl:describe:*)",
			"Bash(kubectl:get:*)",
			"Bash(kubectl:logs:*)",
			"Write",
			"Edit",
			"Read",
			"Glob",
			"Grep"
		],
		"deny": [
			"Bash(rm -rf /)",
			"Bash(rm -rf /*)",
			"Bash(rm -rf ~)",
			"Bash(git push --force origin main)",
			"Bash(git push --force origin master)",
			"Bash(git push -f origin main)",
			"Bash(git push -f origin master)",
			"Bash(sudo:*)",
			"Bash(pnpm publish)",
			"Bash(npm publish)",
			"Bash(bun publish)",
			"Bash(terraform:destroy)",
			"Bash(kubectl:delete:*)",
			"Bash(DROP TABLE:*)",
			"Bash(DELETE FROM:*)",
			"Bash(TRUNCATE:*)",
			"Read(./.env)",
			"Read(./.env.*)",
			"Read(./.env.local)",
			"Read(./.env.production)",
			"Read(./secrets/**)",
			"Read(~/.aws/**)",
			"Read(~/.ssh/**)",
			"Read(./.git/config)",
			"Edit(./.env)",
			"Edit(./.env.*)",
			"Edit(./secrets/**)",
			"Write(./.env)",
			"Write(./.env.*)",
			"Write(./secrets/**)"
		]
	},
	"hooks": {
		"PreToolUse": [
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/bash-validator.sh"
					},
					{
						"type": "command",
						"command": "~/.claude/hooks/pre-commit-validation.sh"
					}
				]
			},
			{
				"matcher": "Edit|Write|Read",
				"hooks": [
					{
						"type": "command",
						"command": "python3 ~/.claude/hooks/file-protection.py"
					},
					{
						"type": "command",
						"command": "~/.claude/hooks/compliance-check.sh"
					}
				]
			},
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/audit-log.sh"
					},
					{
						"type": "command",
						"command": "~/.claude/hooks/cost-estimator.sh"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/team-notification.sh"
					}
				]
			},
			{
				"matcher": "Edit|Write",
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/auto-format.sh",
						"timeout": 30
					},
					{
						"type": "command",
						"command": "~/.claude/hooks/lint-fix.sh",
						"timeout": 30
					},
					{
						"type": "command",
						"command": "~/.claude/hooks/typecheck.sh",
						"timeout": 60
					}
				]
			}
		],
		"UserPromptSubmit": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/security-validator.sh"
					}
				]
			}
		],
		"Stop": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/ralph-loop.sh"
					},
					{
						"type": "command",
						"command": "~/.claude/hooks/team-notification.sh"
					}
				]
			}
		]
	},
	"mcpServers": {
		"context7": {
			"type": "http",
			"url": "https://mcp.context7.com/mcp"
		},
		"filesystem": {
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-filesystem", "/Users/rene"]
		},
		"github": {
			"command": "npx",
			"args": ["-y", "@github/github-mcp-server"],
			"env": {
				"GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
			}
		},
		"duckduckgo": {
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-duckduckgo"]
		},
		"sequentialthinking": {
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
		},
		"fetch": {
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-fetch"]
		},
		"playwright": {
			"command": "npx",
			"args": ["-y", "@microsoft/playwright-mcp"]
		},
		"dockerhub": {
			"command": "npx",
			"args": ["-y", "@docker/dockerhub-mcp"]
		},
		"semgrep": {
			"command": "npx",
			"args": ["-y", "@semgrep/semgrep-mcp"]
		},
		"magic": {
			"command": "npx",
			"args": ["-y", "@21st-dev/magic@latest"],
			"env": {
				"API_KEY": "${MAGIC_API_KEY}"
			}
		},
		"puppeteer": {
			"command": "npx",
			"args": ["-y", "@hisma/server-puppeteer"]
		},
		"supabase": {
			"type": "http",
			"url": "https://mcp.supabase.com/mcp"
		},
		"postgres": {
			"command": "uvx",
			"args": ["postgres-mcp-pro"]
		},
		"brave-search": {
			"command": "npx",
			"args": ["-y", "@brave/brave-search-mcp-server"],
			"env": {
				"BRAVE_API_KEY": "${BRAVE_API_KEY}"
			}
		},
		"notion": {
			"command": "npx",
			"args": ["-y", "@notionhq/notion-mcp-server"],
			"env": {
				"NOTION_API_KEY": "${NOTION_API_KEY}"
			}
		},
		"sentry": {
			"type": "http",
			"url": "https://mcp.sentry.dev/mcp"
		},
		"slack": {
			"command": "npx",
			"args": ["-y", "@anthropic/slack-mcp-server"],
			"env": {
				"SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
				"SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
			}
		},
		"linear": {
			"command": "npx",
			"args": ["-y", "@linear/linear-mcp-server"],
			"env": {
				"LINEAR_API_KEY": "${LINEAR_API_KEY}"
			}
		},
		"memory": {
			"command": "npx",
			"args": ["-y", "@anthropic/memory-mcp-server"]
		},
		"shadcn": {
			"command": "npx",
			"args": ["-y", "shadcn@canary", "mcp"]
		},
		"shadcn-studio": {
			"command": "npx",
			"args": ["-y", "@shadcn-studio/mcp@latest"]
		},
		"browser-tools": {
			"command": "npx",
			"args": ["-y", "@anthropic/mcp-server-browsertools"]
		}
	},
	"alwaysThinkingEnabled": true,
	"enabledPlugins": {
		"typescript-lsp@claude-plugins-official": true
	},
	"outputStyle": "Argentino",
	"statusLine": {
		"type": "command",
		"command": "~/.claude/statusline.sh"
	}
}
